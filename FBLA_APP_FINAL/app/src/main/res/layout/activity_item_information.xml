<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juanrubio.fbla_app_final.ItemInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/itemInformationLayout"
        android:padding="20dp"
        android:background="@color/colorBackGround">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/itemTitleTextView" />

        <ImageView
            android:id="@+id/itemImageImageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price: "
                android:textSize="20sp"
                android:textColor="@color/colorTitleText"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:id="@+id/itemPriceTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="@color/colorTitleText"
                android:text="Condition: "
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:id="@+id/itemConditionTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorTitleText"
                android:textSize="20sp"
                android:text="Description: "
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:id="@+id/itemDescriptionTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Back"
                android:textColor="@color/colorWhiteText"
                android:background="@drawable/btncircle"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:onClick="cancel"/>
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btncircle"
                android:onClick="comment"
                android:text="Comment"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/colorWhiteText" />

            <Button
                android:layout_width="100dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:text="Add to Cart"
                android:textColor="@color/colorWhiteText"
                android:background="@drawable/btncircle"
                android:onClick="addToCart"/>
        </LinearLayout>
        f

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Comments: "
            android:textColor="@color/colorTitleText"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>


    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
